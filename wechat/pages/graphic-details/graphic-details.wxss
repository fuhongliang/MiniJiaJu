@import "../../wxParse/wxParse.wxss";
.graphic{
    width: 750rpx;
    height: auto;
    background: #FFFFFF;
    padding-bottom: 100rpx;
}

.detail_img{
    width: 750rpx;
}
.user_img{
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
}
.user_name{
    font-size: 28rpx;
    color: #333333;
    margin-left: 22rpx;
    line-height: 40rpx;
}
.detail_title{
    font-size: 34rpx;
    color: #000000;
    margin-top: 23rpx;
    font-weight: bold;
    text-align: justify;
}
.detail_time{
    width: 720rpx;
    font-size: 26rpx;
    color: #999999;
    margin-top: 19rpx;
    border-bottom: 1rpx solid #F2F2F2;
}
.content{
    width: 750rpx;
    padding: 30rpx;
    font-size:30rpx;
    font-weight:400;
    color:rgba(51,51,51,1);
    line-height:54rpx;
    text-align: justify;
}

.contact_designer{
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 444;
    width: 750rpx;
    height: 98rpx;
    background: #FFFFFF;
}
.contact_designer_img{
    width: 36rpx;
    height: 36rpx;
}
.contact_designer_text{
    font-size: 34rpx;
    color: #333333;
}