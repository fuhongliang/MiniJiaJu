::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
page{
    background: #F5F5F5;
}
.sort_tab{
    position: fixed;
    top:0rpx;
    left: 0;
    right: 0;
    width: 100%;
    z-index: 3;
}

.sort_list{
    height: 110rpx;
    width: 100%;
    background: #0EC262;
    padding-bottom: 20rpx;
}

.sort_tab_item{
    text-align: center;
}
.sort_tab_item.active text{
    border-bottom: 4rpx solid #FFFFFF;
}
.sort_tab_item text{
    padding: 12rpx 0;
    color: #FFFFFF;
    font-size:32rpx;
}
.classify2{
    height: 88rpx;
}
.goods_sort{
    height: 88rpx;
}

.top-bar {
    width: 100%;
    background: #fff;
}

.sort-bar{
    width: 100%;
    background: #fff;
}
.cat-list {
    white-space: nowrap;
    border-bottom: 1rpx solid #e3e3e3;
    background: #fff;
}

.cat-list .list-content {
    white-space: nowrap;
    height: 100rpx;
}

.cat-list .cat-item {
    white-space: nowrap;
    display: inline-block;
    padding: 0 40rpx;
    height: 100%;
}

.cat-list .cat-item text {
    white-space: nowrap;
    border-bottom: 5rpx solid transparent;
    height: 100%;
    transform: translateY(1rpx);
}

.cat-list .cat-item.active text {
    color: #ff4544;
    border-bottom-color: #ff4544;
}

.sub-cat-list {
    white-space: nowrap;
    border-bottom: 1rpx solid #e3e3e3;
    background: #fff;
}

.sub-cat-list scroll-view {
    height: 100rpx;
}

.sub-cat-list .list-content {
    white-space: nowrap;
    height: 100rpx;
    padding: 0 20rpx;
}

.sub-cat-list .cat-item {
    display: inline-block;
    height: 60rpx;
    padding: 0 20rpx;
    border: 1rpx solid #ff4544;
    margin: 20rpx;
    color: #ff4544;
    border-radius: 5rpx;
}

.sub-cat-list .cat-item text {
    height: 100%;
}

.sub-cat-list .cat-item.active {
    background: #ff4544;
    color: #fff;
}

.goods-list {
    width: 750rpx;
    padding-left: 27rpx;
    padding-right: 27rpx;
}

.no-data-tip{
    width: 690rpx;
}
.goods{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: calc(100% - 98rpx);
    z-index: 8;
    border-radius:14rpx 14rpx 0px 0px;
    overflow: hidden;
    background:linear-gradient(to bottom,#FFFFFF 5%,#F5F5F5 20%,#F5F5F5 100%);
    background:-webkit-linear-gradient(top,#FFFFFF 5%,#F5F5F5 20%,#F5F5F5 100%);
}

.goods_toggle{
    width: 100%;
    height: 100%;
}
.goods_item{
    width: 100%;
    height: 100%;
}
.scroll{
    width: 100%;
    height: 100%;
}
.goods-item {
    width: 336rpx;
    display: inline-block;
    position: relative;
    margin-bottom: 30rpx;
    font-size: 0;
    background: #FFFFFF;
    border-radius: 6rpx;
}

.goods-item .goods-pic {
    width: 336rpx;
    border:1rpx solid rgba(242, 242, 242,1);
    box-sizing: border-box;
}
.goods-item .goods-pic image{
    width: 336rpx;
    height: 330rpx;
    border-radius:6rpx 6rpx 0px 0px;
}

.goods-item .goods_name {
    height: 40rpx;
    font-size:26rpx;
    color:#333333;
    margin: 10rpx 0;
    text-align: left;
}

.goods-item .goods_price {
    margin-bottom: 10rpx;
}
.store-bg{
    width: 690rpx;
    height: 300rpx;
    position: absolute;
    top: 0;
    right: 0rpx;
    z-index: 1;
    transform: scale(0.7) translate(18%,-30%);
}
.goods-info{
    padding:0 10rpx;
}

.loading-bar {
    visibility: hidden;
}

.loading-bar.active {
    visibility: visible;
}
.sort-bar {
    height: 85rpx;
    padding: 0 40rpx;
}

.sort-item image{
    width: 9rpx;
    height: 16rpx;
    margin-left: 10rpx;
}
.sort-item .trans{
    transform: rotateX(180deg);
}

.sort-item .title{
    font-size:26rpx;
    color:#333333;
}

.sort-item.active {
    color: #0EC262;
}

.sort-item.active .title{
    color: #0EC262;
}

.sort-item .arrow {
    text-align: bottom;
}
.sort-item .sort-icon-box {
    margin-left: 15rpx;
}

.sort-item .sort-icon-up,.sort-item .sort-icon-down {
    display: block;
}

.sort-item .sort-icon-up {
   
}

.banner {
    height: 360rpx;
}

.banner navigator {
    font-size: 0;
    position: relative;
    height: 100%;
}

.banner .slide-image {
    width: 100%;
    height: 100%;
}

.banner .slide-title {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background: rgba(0,0,0,0.5);
    color: #fff;
    padding: 20rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    font-size: 11pt;
    display: none;
}

.store{
    width: 750rpx;
    padding-bottom: 150rpx;
}
.store_item{
    width: 690rpx;
    height: 404rpx;
    margin-bottom: 30rpx;
    margin-left: 30rpx;
    position: relative;
    border-radius:8rpx;
    overflow: hidden;
}
.store_info{
    position: absolute;
    top: 30rpx;
    left:30rpx;
    z-index: 3;
}
.store_avatar{
    width: 66rpx;
    height: 66rpx;
    border-radius: 6rpx;
}
.store_name{
    font-size: 30rpx;
    color: #333333;
    margin-left: 30rpx;
}
.store_num{
    font-size: 24rpx;
    color: #333333;
    margin-left: 30rpx;
}
.store_enter{
    width:120rpx;
    height:60rpx;
    line-height: 60rpx;
    text-align: center;
    border:1px solid #0EC262;
    border-radius:30rpx;
    color:#0EC262;
    font-size: 30rpx;
}
.store_goods{
    width: 690rpx;
    position: absolute;
    top: 140rpx;
    left: 0rpx;
    z-index: 4;
}
.store_goods navigator{
    margin-left: 24rpx;
}

.goods_arr{
    width: 198rpx;
    background: #FFFFFF;
    border-radius: 6rpx;
}
.goods_arr .goods_img{
    width: 198rpx;
    height: 198rpx;
    border-radius: 6rpx;
}
.goods_arr .goods_price{
    width: 100%;
    text-align: center;
    z-index: 10;
    margin: 5rpx 0;
    padding:0 10rpx;
}


