.invitation{
  width: 750rpx;
  height: 100%;
  position: relative;
  overflow: hidden;
}
.invitation_bg{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}
.invitation_container{
  width: 750rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 222;
}
.avatar{
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
  margin-bottom: 6pt;
}
.nickname{
  font-size:36rpx;
  font-weight:bold;
  color:#FFFBE5;
  line-height:36rpx;
  margin-bottom: 15pt;
}
.hello_word{
  font-size: 40rpx;
  color: #FFFFFF;
  font-weight: bold;
  margin-bottom: 25pt;
}
.invitation_btn{
  width: 491rpx;
  text-align: center;
  height:85rpx;
  line-height: 85rpx;
  background:#FFE8B4;
  border-radius:43rpx;
  font-size: 36rpx;
  color: #E81035;
  font-weight: bold;
  margin-bottom: 40pt;
}
.invitation_text{
  font-size:27rpx;
  font-weight:500;
  color:#FFE8B4;
  margin-bottom: 12pt;
}

.evaluate{
  width: 100%;
  height: 0;
  background: #FFFFFF;
  overflow: hidden;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 666;
  transition: all .4s ease-in;
}
.evaluate.active{
  height: 100%;
}
.evaluate_bg{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  width: 750rpx;
}

.evaluate_list{
    position: absolute;
    bottom: 30rpx;
    left: 0;
    z-index: 44;
    width: 750rpx;
    height: 100%;
    overflow: hidden;
}
.evaluate_list_box{
    width: 690rpx;
    height: 80%;
    background: #FFFFFF;
    position: absolute;
    bottom: 0;
    left: 0;
    padding: 30rpx;
    box-shadow:0rpx 9rpx 18rpx 0rpx rgba(255,62,54,0.13);
    border-radius:10rpx;
    margin-left: 30rpx;
}

.evaluate_list_head{
    width: 630rpx;
    height: 88rpx;
}
.evaluate_list_head_text{
    color: #808080;
    font-size:28rpx;
    text-align: center;
}

.evaluate_items_container{
    width: 630rpx;
    height: 85%;
}
.evaluate_scroll{
    width: 630rpx;
    height: 100%;
    overflow: hidden;
    padding-bottom: 40rpx;
}
.evaluate_item{
  width: 630rpx;
  height: 200rpx;
  background: #FFFFFF;
  box-shadow:0rpx 5rpx 15rpx 0rpx rgba(75,147,254,0.13);
}
.item_left{
  width: 240rpx;
  height: 200rpx;
  position: relative;
}
.item_tags{
  width: 240rpx;
  height: 200rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  z-index: 0;
}
.evaluate_content{
  z-index: 2;
}
.evaluate_content .price{
  font-weight: bold;
  color: #FFFFFF;
  margin: 0;
  width: auto;
  height: auto;
}
.item_right{
  width: 395rpx;
  height: 200rpx;
  background: #FFFFFF;
  position: relative;
  padding-left: 30rpx;
}
.get_success{
  width: 102rpx;
  height: 89rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.rules{
  font-size: 24rpx;
  color: #FFFFFF;
}
.item_right .title{
  width: 395rpx;
  font-size: 32rpx;
  color: #000000;
  line-height: 66rpx;
  font-weight: bold;
}
.days_rule{
  font-size: 24rpx;
  color: #666666;
}
.goto_get_img{
    width: 40rpx;
    height: 40rpx;
}
.is_choose{
  width:160rpx;
  text-align: center;
  height:52rpx;
  line-height: 52rpx;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(75,147,254,1);
  border-radius:25rpx;
  font-size: 28rpx;
  color: #4B93FE;
}
.confirm_btn{
    width:630rpx;
    text-align: center;
    height:88rpx;
    line-height: 88rpx;
    background:#0EC262;
    border-radius:10rpx;
    font-size: 36rpx;
    font-weight: bold;
    color: #FFFFFF;
    position: absolute;
    bottom: 0;
    left: 30rpx;
}