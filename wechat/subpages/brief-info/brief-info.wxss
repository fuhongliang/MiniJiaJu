page{
    background: #000000;
}

.brief{
    width: 100%;
    height: 100%;
    background: #000000;
    position: relative;
}
.info_container{
    width: 750rpx;
    height: 100%;
}
.info{
    height: 100%;
    position: relative;
}

.img_container{
    width: 750rpx;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 11;
}

.info_img{
    width: 750rpx;
}

.content{
    width: 750rpx;
    word-wrap:break-word;
    color: #FFFFFF;
    font-size: 30rpx;
    line-height: 55rpx;
    position: absolute;
    bottom: 0;
    left: 0;
    text-align: justify;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
    overflow: hidden;
    z-index: 45;
}