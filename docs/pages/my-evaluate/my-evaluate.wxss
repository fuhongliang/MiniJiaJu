.evaluate_head{
  width: 100%;
  height: 88rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 16;
  background: #FFFFFF;
  border-bottom: 1rpx solid #E5E5E5;
}
.evaluate_head_item{
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
}
.evaluate_head_item.active{
  border-bottom:4rpx solid #0EC262;
  color:#0EC262;
}


.evaluate_list{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 5;
  padding-top: 89rpx;
}
.evaluate_scroll{
  width: 100%;
  height: 100%;
}

.evaluate_item{
  width: 690rpx;
  height: 200rpx;
  background: #FFFFFF;
}
.item_left{
  width: 240rpx;
  height: 200rpx;
  position: relative;
}
.item_tags{
  width: 240rpx;
  height: 200rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}
.evaluate_content{
  z-index: 2;
}
.evaluate_content .price{
  font-weight: bold;
  color: #FFFFFF;
  margin: 0;
  width: auto;
  height: auto;
}

.item_right{
  width: 425rpx;
  height: 200rpx;
  background: #FFFFFF;
  position: relative;
}
.get_success{
  width: 102rpx;
  height: 89rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.rules{
  font-size: 24rpx;
  color: #FFFFFF;
}
.item_right .title{
  width: 425rpx;
  font-size: 32rpx;
  color: #000000;
  font-weight: bold;
}
.days_rule{
  font-size: 24rpx;
  color: #666666;
  margin-top: 15rpx;
}
.goto_get_text{
  width:160rpx;
  text-align: center;
  height:52rpx;
  line-height: 52rpx;
  border-radius:25rpx;
  font-size: 28rpx;
  margin-top: 32rpx;
  background:#FFFFFF;
  color: #4B93FE;
  border:1rpx solid #4B93FE;
}