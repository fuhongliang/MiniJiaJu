::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.sort_tab{
    position: fixed;
    top:0rpx;
    left: 0;
    right: 0;
    width: 100%;
    z-index: 10;
}

.sort_list{
    height: 88rpx;
    width: 100%;
    background: #0EC262;
}

.sort_tab_item{
    text-align: center;
}
.sort_tab_item.active text{
    border-bottom: 1rpx solid #FFFFFF;
}
.sort_tab_item text{
    padding: 15rpx 0;
    color: #FFFFFF;
    font-size:32rpx;
}
.classify2{
    height: 88rpx;
}
.goods_sort{
    height: 88rpx;
}

.top-bar {
    width: 100%;
    background: #fff;
    border-bottom: 1rpx solid #F2F2F2;
}

.sort-bar{
    width: 100%;
    background: #fff;
}
.cat-list {
    white-space: nowrap;
    border-bottom: 1rpx solid #e3e3e3;
    background: #fff;
}

.cat-list .list-content {
    white-space: nowrap;
    height: 100rpx;
}

.cat-list .cat-item {
    white-space: nowrap;
    display: inline-block;
    padding: 0 40rpx;
    height: 100%;
}

.cat-list .cat-item text {
    white-space: nowrap;
    border-bottom: 5rpx solid transparent;
    height: 100%;
    transform: translateY(1rpx);
}

.cat-list .cat-item.active text {
    color: #ff4544;
    border-bottom-color: #ff4544;
}

.sub-cat-list {
    white-space: nowrap;
    border-bottom: 1rpx solid #e3e3e3;
    background: #fff;
}

.sub-cat-list scroll-view {
    height: 100rpx;
}

.sub-cat-list .list-content {
    white-space: nowrap;
    height: 100rpx;
    padding: 0 20rpx;
}

.sub-cat-list .cat-item {
    display: inline-block;
    height: 60rpx;
    padding: 0 20rpx;
    border: 1rpx solid #ff4544;
    margin: 20rpx;
    color: #ff4544;
    border-radius: 5rpx;
}

.sub-cat-list .cat-item text {
    height: 100%;
}

.sub-cat-list .cat-item.active {
    background: #ff4544;
    color: #fff;
}

.goods-list {
    width: 750rpx;
    background: #FFFFFF;
    padding-left: 27rpx;
    padding-right: 27rpx;
}

.no-data-tip{
    width: 690rpx;
}
.goods{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 8;
    padding-top: 176rpx;
}

.goods_toggle{
    width: 100%;
    height: 100%;
}
.goods_item{
    width: 100%;
    height: 100%;
}
.scroll{
    width: 100%;
    height: 100%;
}
.goods-item {
    width: 330rpx;
    display: inline-block;
    position: relative;
    margin:0 5rpx;
    margin-top: 30rpx;
    margin-bottom: 10rpx;
    font-size: 0;
    background: #fff;
}

.goods-item .goods-pic {
    width: 330rpx;
    background: #FFFFFF;
    border:1rpx solid rgba(242, 242, 242,1);
    box-sizing: border-box;
}
.goods-item .goods-pic image{
    width: 330rpx;
    height: 330rpx;
}

.goods-item .goods_name {
    width: 330rpx;
    height: 40rpx;
    font-size:32rpx;
    font-weight:500;
    color:#000000;
    margin: 15rpx 0;
    text-align: left;
}

.goods-item .goods_price {
    font-size:34rpx;
    font-weight:bold;
    color:rgba(253,87,87,1);
    margin: 15rpx 0;
    text-align: left;
}
.loading-bar {
    visibility: hidden;
}

.loading-bar.active {
    visibility: visible;
}
.sort-bar {
    height: 100rpx;
}

.sort-item image{
    width: 9rpx;
    height: 6rpx;
    margin-left: 10rpx;
}
.sort-item .trans{
    transform: rotateX(180deg);
}

.sort-item .title{
    font-size:30rpx;
    font-weight:500;
    color:#333333;
}

.sort-item.active {
    color: #0EC262;
}

.sort-item.active .title{
    color: #0EC262;
}

.sort-item .arrow {
    text-align: bottom;
}
.sort-item .sort-icon-box {
    margin-left: 15rpx;
}

.sort-item .sort-icon-up,.sort-item .sort-icon-down {
    width: 20rpx;
    height: 12rpx;
    display: block;
}

.sort-item .sort-icon-up {
    margin-bottom: 5rpx;
}

.banner {
    height: 360rpx;
}

.banner navigator {
    font-size: 0;
    position: relative;
    height: 100%;
}

.banner .slide-image {
    width: 100%;
    height: 100%;
}

.banner .slide-title {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background: rgba(0,0,0,0.5);
    color: #fff;
    padding: 20rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    font-size: 11pt;
    display: none;
}

.store{
    width: 750rpx;
}
.store_item{
    width: 750rpx;
    background: #FFFFFF;
    padding:30rpx;
    margin-top: 30rpx;
}
.store_info{
    height: 100rpx;
}
.store_avatar{
    width: 54rpx;
    height: 54rpx;
    border-radius: 6rpx;
}
.store_name{
    font-size: 30rpx;
    color: #333333;
    margin-left: 30rpx;
}
.store_num{
    font-size: 24rpx;
    color: #999999;
    margin-left: 30rpx;
}
.store_enter{
    width:120rpx;
    height:60rpx;
    line-height: 60rpx;
    text-align: center;
    background:#FFFFFF;
    border:1px solid #0EC262;
    border-radius:30rpx;
    color:#0EC262;
    font-size: 30rpx;
}
.store_goods{
    width: 690rpx;
    height: 210rpx;
    margin: 30rpx 0;
    background: #FFFFFF;
}
.goods_arr{
    width: 210rpx;
    height: 210rpx;
    position: relative;
}
.goods_arr .goods_img{
    width: 210rpx;
    height: 210rpx;
    border-radius: 6rpx;
}
.goods_arr .goods_price{
    position: absolute;
    top: 0;
    left: 0;
    width: 120rpx;
    text-align: center;
    height: 44rpx;
    line-height: 44rpx;
    text-align: center;
    background: rgba(0,0,0,0.5);
    z-index: 10;
    color: #FFFFFF;
}


