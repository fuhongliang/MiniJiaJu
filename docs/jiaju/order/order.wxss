.tabbar_container{
    width: 750rpx;
    height: 118rpx;
    position: fixed;
    top: 0;
    left: 0;
    background: #fff;
    border-bottom: 1rpx solid #e3e3e3;
    z-index: 1000;
    overflow: hidden;
}

.translate{
    transform: translateX(-100rpx);
}

.tab-bar {
    height: 88rpx;
    width:850rpx;
    margin-top: 10rpx;
}
.tab-bar-item{
    padding: 0 25rpx;
}

.content_container{
    width: auto;
    margin-top: 148rpx;
}
.tab_content{
   width: 750rpx;
   height: 100%;
}

.head_img .arrow{
    width: 10rpx;
    height: 16rpx;
    margin-left: 15rpx;
}
.head_img .avatar{
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
}

.head_img .head_title{
    width: 150rpx;
    font-size: 30rpx;
    color: #000000;
    margin-left: 15rpx;
}

.head_status{
    font-size: 32rpx;
}

.pay{
    color: #FD5757;
}

.send{
    color: #FF7B1B;
}

.head_status .receive{
    color: #4B93FE;
}

.complete{
    color: #0EC262;

}

.cancel{
    color: #999999;
}

.business_logo{
    width: 154rpx;
    height: 154rpx;
}

.business_detail{
    margin-left: 30rpx;
    height: 154rpx;
}

.goods_item{
   width: 750rpx;
   height: 392rpx;
   background: #FFFFFF;
   margin-bottom: 30rpx;
}

.goods_item_head{
   height: 88rpx;
}

.goods_price{
    font-size: 34rpx;
    color: #FD5757;
}

.goods_num{
    font-size:30rpx;
    color: #999999;
}

.goods_item_detail{
    height: 212rpx;
    padding: 30rpx 0;
    border-top:1rpx solid #F2F2F2;
    border-bottom:1rpx solid #F2F2F2;
}

.goods_name{
    width: 450rpx;
    font-size: 34rpx;
    color: #000000;
}

.goods_spec{
    font-size: 28rpx;
    color: #999999;
}

.goods_price{
    font-size: 34rpx;
    color: #FD5757;
}

.goods_num{
    font-size: 30rpx;
    color: #999999;
}

.cancel_order,.contact,.delete_order{
    text-align: center;
    width:180rpx;
    height:60rpx;
    line-height: 60rpx;
    background:#FFFFFF;
    border:1rpx solid #E6E6E6;
    border-radius:30rpx;
    font-size: 28rpx;
    color:#010101;
}
.goods_item_status .receive,.goods_item_status .pay{
    text-align: center;
    width:180rpx;
    height:60rpx;
    line-height: 60rpx;
    background:#FFFFFF;
    border:1rpx solid #0EC262;
    border-radius:30rpx;
    font-size: 28rpx;
    color:#0EC262;
}

.goods_item_status{
    width: 720rpx;
    height: 88rpx;
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-end;
    align-items: center;
}

image{
    width: 30rpx;
    height: 30rpx;
}

.tab-bar~.order-list {
    padding-top: 100rpx;
}

.tab-bar-item .tab-bar-item-text {
    display: block;
    text-align: center;
}

.tab-bar-item .tab-bar-item-text text {
    height: 88rpx;
    line-height: 88rpx;
    display: inline-block;
    font-size: 32rpx;
    color: #666666;
    font-family: "microsoft yahei";
}

.tab-bar-item .tab-bar-item-text.active text {
    color: #0EC262;
    font-weight: bold;
}




.order-list .order-item {
    background: #fff;
    padding: 32rpx 24rpx;
    margin-bottom: 20rpx;
    border-bottom: 1rpx solid #e3e3e3;
}

.order-list .order-info {
    font-size: 9pt;
    color: #888;
}

.goods-item {
    background: #fff;
    border-bottom: 1rpx solid #e3e3e3;
    padding: 32rpx 0;
    border-bottom: 1rpx solid #eee;
    margin: 20rpx 0;
}

.goods-item:first-child {
    border-top: 1rpx solid #eee;
}

.goods-item .goods-pic {
    width: 156rpx;
    height: 156rpx;
    margin-right: 20rpx;
}

.goods-item .goods-name {
    margin-bottom: 10rpx;
    -webkit-line-clamp: 2;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.goods-item .attr-list,.goods-item .num {
    font-size: 9pt;
    color: #888;
}

.goods-item .attr-list .attr-item {
    display: inline-block;
    margin-right: 36rpx;
}

.goods-item .attr-list .attr-item:last-child {
    margin-right: 0;
}

.goods-item .price {
    color: #ffbb43;
}

.order-option-btn {
    border: 1rpx solid #bbb;
    background: #fff;
    border-radius: 10rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: inherit;
    margin-left: 30rpx;
    padding: 0 30rpx;
}

.order-option-btn::after {
    display: none;
}

.return-index-btn {
    position: fixed;
    right: 0;
    bottom: 100rpx;
    display: inline-block;
    background: rgba(157,157,157,0.5);
    padding: 10rpx 20rpx;
    z-index: 1000;
    border-radius: 10rpx 0 0 10rpx;
}

.hide {
    display: none;
}

.modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    z-index: 9999;
}